            <input id="data" name="data" type="date">
            <button type="submit">criar</button>
        </form>
    </div>

    <div>
        <ul>
            <% getLembrete.forEach((item) => {%>
                <li>
                    <%= item.nome %> --:-- <%=typeof item.data%>
                </li>
            <% }) %>
        </ul>
